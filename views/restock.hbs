<section id="item-list">
    <table id="item-table" class="box">
        <div class="title">
            <img src="images/w98_help_book_small.ico" width="18" height="18" class="title" />
            <p class="title">Available items</p>
            <button>X</button>
            <button>?</button>
        </div>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Artist (Movies)</th>
                <th>Genre</th>
                <th>Type</th>
                <th>Stock</th>
                <th>Image</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody id="item-col"></tbody>
    </table>

    <br>
    <br>
    <form id="add-item-form" class="box2">
        <div class="title">
            <img src="images/w98_help_book_small.ico" width="18" height="18" class="title" />
            <p class="title">Add new item</p>
            <button>X</button>
            <button>?</button>
        </div>
        <div class="body">
            <div class="form-group">
                <label for="item-title">Name:</label>
                <input type="text" id="item-title" name="name" required>
            </div>

            <div class="form-group">
                <label for="item-description">Description:</label>
                <input type="text" id="item-description" name="description" required>
            </div>

            <div class="form-group">
                <label for="item-artist">Artist:</label>
                <input type="text" id="item-artist" name="artist" required>
            </div>

            <div class="form-group">
                <label for="item-genre">Genre:</label>
                <input type="text" id="item-genre" name="genre" required>
            </div>

            <div class="form-group">
                <label for="item-type">Media Type:</label>
                <select name="select" id="item-type">
                    <option value="CD" selected>CD</option>
                    <option value="DVD">DVD</option>
                    <option value="Casette">Кассета</option>
                </select>
            </div>

            <div class="form-group">
                <label for="item-stock">Stock:</label>
                <input type="number" id="item-stock" name="stock" required>
            </div>

            <div class="form-group">
                <label for="item-image">Image link:</label>
                <input type="text" id="item-image" name="image" required>
            </div>

            <div class="form-group">
                <label for="item-price">Price:</label>
                <input type="number" id="item-price" name="price" required>
            </div>

            <button type="submit" class="btn btn-primary">Add Item</button>
        </div>
    </form>
</section>

<script src="app.js"></script>
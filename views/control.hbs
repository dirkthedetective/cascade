<section id="item-list">
    <table id="item-table" class="box">
        <div class="title">
            <img src="images/w98_help_book_small.ico" width="18" height="18" class="title" />
            <p class="title">User control panel</p>
            <button>X</button>
            <button>?</button>
        </div>
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>User type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="item-col"></tbody>
    </table>
    <br>
    <br>
    <form id="add-item-form" class="box2">
        <div class="title">
            <img src="images/w98_help_book_small.ico" width="18" height="18" class="title" />
            <p class="title">Manage users</p>
            <button>X</button>
            <button>?</button>
        </div>
        <div class="body" id="form-body">
            <div class="form-group">
                <label for="item-id">ID:</label>
                <input type="text" id="item-id" name="id">
            </div>

            <div class="form-group">
                <label for="item-username">Username:</label>
                <input type="text" id="item-username" name="username">
            </div>

            <div class="form-group">
                <label for="item-password">Password:</label>
                <input type="text" id="item-password" name="password">
            </div>

            <div class="form-group">
                <label for="item-email">Email:</label>
                <input type="text" id="item-email" name="email">
            </div>

            <div class="form-group">
                <label for="item-type">User Type:</label>
                <select name="select" id="item-type">
                    <option value="Pending" selected>User</option>
                    <option value="Manager">Manager</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>

            <button name="button1" type="submit">Add User</button>
            <button name="button2" type="submit">Update User</button>
            <button name="button3" type="submit">Delete User</button>
        </div>
    </form>
</section>

<script src="control.js"></script>